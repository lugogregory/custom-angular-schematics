{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsHelloWordService",
  "title": "Hello word service",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the service.",
      "type": "string",
      "default": "hello-word"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false,
      "$default": {
        "$source": "workingDirectory"
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": ["name"]
}
